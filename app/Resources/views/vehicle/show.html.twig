{% extends 'base.html.twig' %}

{% block body %}
    <h1>Vehicle</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ vehicle.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ vehicle.name }}</td>
            </tr>
            <tr>
                <th>Engine</th>
                <td>{{ vehicle.engine }}</td>
            </tr>
            <tr>
                <th>Brand</th>
                <td>{{ vehicle.brand }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ vehicle.year }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ vehicle.amount }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ vehicle.price }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('_edit', { 'id': vehicle.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
